@using MovieApp.Models;
@using MovieApp.Clients;
@inject MovieClient MovieClient;
@using MovieApp.Shared.Components;
@page "/movies"

<PageTitle>
    MovieRatings
</PageTitle>

<Header />

<WelcomeArea />

<p>@movieResponse</p>

<MovieImages imgUrl="@movieResponse.poster_path" />

<Categories />

<Footer />

@code {
    private MovieResponse? movieResponse = null;
    protected override async Task OnInitializedAsync() {
        movieResponse = await MovieClient.GetMovieResponse();
    }
}