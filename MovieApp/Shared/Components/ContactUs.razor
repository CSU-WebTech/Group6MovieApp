@page "/ContactUs";
@inject NavigationManager NavigationManager;

<Header />

<WelcomeArea />

<div class="row container-fluid">
    <h3>You can contact us at +1 800 567 8900 or send us an email at MovieRatings@yahoo.com</h3>
</div>  

<div id="contact-container" class="container-fluid mb-20">
    <form>
        <div class="form-group pb-3">
            <label for="email-address">Email address</label>
            <input type="email" class="form-control" id="email-text-area" placeholder="name@example.com">
        </div>
        <div class="form-group pb-3">
            <label for="subject-line">Subject</label>
            <input type="text" class="form-control" id="subject-text" placeholder="Your subject line here...">
        </div>
        <div class="form-group pb-3">
            <label for="contact-us">Contact us</label>
            <textarea class="form-control" id="contact-text-area" rows="3" placeholder="Type what you would like to say..."></textarea>
        </div>
        <div class="form-group pb-3">
        <button type="button" id="submit-button" @onclick="Submit">Submit</button>
        </div>
    </form>
</div>

<Footer />

@code {

    private async Task Submit()
    {
        NavigationManager.NavigateTo($"/");
    }

}