@using System.Text.Json.Serialization;
@using MovieApp.Shared.Components;
@using MovieApp.Pages;
@inject NavigationManager NavigationManager;

<nav class="navbar navbar-expand-lg">
    <div id="nav-container" class="container-fluid">
        <div class="navbar-brand"><a href="/">Movie<span id="title-ratings">Ratings</span></a></div>
        <!-- <div>
            <input type="text" placeholder="Search..." id="search-bar-header" @bind-value="@searchTerm">
            <button id="search-button" class="btn" @onclick="Search">Search</button>
        </div> -->

        <form class="d-flex">
            <input id="search-bar-header" class="form-control me-2" type="search" placeholder="Search..." aria-label="Search" @bind-value="@searchTerm">
            <button id="search-button" class="btn" type="submit" @onclick="Search">Search</button>
        </form>
        <button type="button" id="login-button" @onclick="Login">Login</button>
    </div>
</nav>

@code {

    public string? searchTerm { get; set; }

    private async Task Search() 
    {
        await Task.Run(() => NavigationManager.NavigateTo($"/search-results/{searchTerm}")); 
    }
    
    private async Task Login() 
    {
        await Task.Run(() => NavigationManager.NavigateTo("/Login"));
    }
}