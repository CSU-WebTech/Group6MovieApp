@using MovieApp.Shared.Components;
@using System.Text.Json.Serialization;
@inject HttpClient httpClient

<div class="container-fluid">
    <input type="text" placeholder="Search..." id="search-bar-header" @bind-value="@searchTerm">
    <button @onclick="Search">Search</button>
</div>

@if (movies.Results != null) {
    @foreach (var movie in movies.Results) {
        <div class="col">
            <a href="#"><img class="img-fluid rounded" src="@($"https://image.tmdb.org/t/p/w500/{movie.PosterPath}")" alt="@movie.Title" /></a>
        </div>
    }
}

@code {
    private MoviesResponse movies;
    public string searchTerm { get; set; }

    private async Task Search() 
    {
        movies = await httpClient.GetFromJsonAsync<MoviesResponse>($"https://api.themoviedb.org/3/search/movie?api_key=3d16f1e91053992401099962ac5650c9&language=en-US&query={searchTerm}&page=1&include_adult=false");
    }

    public class MoviesResponse
    {
        public int Page { get; set; }
        public List<Movie> Results { get; set; }
    }

    public class Movie
    {
        public string Title { get; set; }
        public string Overview { get; set; }
        public string PosterPath { get; set; }
        [JsonPropertyName("poster_path")]
        public string PosterPathAlt { 
            set { PosterPath = value; } 
        }
    }
}